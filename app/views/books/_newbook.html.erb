<h2>New book</h2>
<%= form_with model: book,url: books_path do |f| %>
  <div class="field">
    <h4>Title</h4>
    <%= f.text_field :title, class:"form-control", rows:"3" %>
  </div>
  <div class="field">
    <h4>Opinion</h4>
    <%= f.text_area :body, class:"form-control", rows:"3" %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book', class:"btn btn-success" %>
  </div>
<% end %>